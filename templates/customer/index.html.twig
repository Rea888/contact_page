{% extends 'base.html.twig' %}

{% block title %}Contact Form{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/form.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/styles/font.css') }}">
{% endblock %}

{% block body %}

    <div class="d-flex align-items-center justify-content-center full-vh">
        <div class="container mt-5" id="home-contact">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center justify-content-center" id="first-column">
                    <div class="img-container align-self-center">

                        <img src="{{ asset('assets/img/envelope.png') }}" alt="Boríték" id="background-img"
                             class="img-movable">
                        <div class="question-mark" id="qm1">?</div>
                        <div class="question-mark" id="qm2">?</div>
                        <div class="question-mark" id="qm3">?</div>
                        <div class="question-mark" id="qm4">?</div>
                        <div class="question-mark" id="qm5">?</div>
                        <div class="question-mark" id="qm6">?</div>

                    </div>
                </div>

                <div class="col-md-6 d-flex align-items-center justify-content-center" id="second-column">
                    <div class="col align-self-center">
                        <div class="row mt-5 mb-4">

                            <h1>Kérdésed van?</h1>

                        </div>

                        {{ form_start(form, {'attr': {'id': 'customer-form','novalidate': 'novalidate'}}) }}

                        <div class="form-group mb-3">
                            <div class="row">
                                {{ form_widget(form.name, { 'attr': {'class': form.name.vars.errors is empty ? 'input-field' : 'input-field error '} }) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="row">
                                {{ form_widget(form.email, { 'attr': {'class': form.email.vars.errors is empty ? 'input-field' : 'input-field error'} }) }}
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <div class="row">
                                {{ form_widget(form.content, { 'attr': {'class': form.content.vars.errors is empty ? 'textarea-field' : 'textarea-field error', 'data-counter': '#counter'} }) }}
                                <div id="counter" class="text-counter">0 characters</div>
                            </div>
                        </div>

                        <div class="form-group mb-5">
                            <div class="row">
                                {{ form_widget(form.send, { 'attr': {'class': 'send'} }) }}
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success container-fluid d-flex align-items-center justify-content-center"
                         id="success">
                        {{ message }}
                    </div>
                {% endfor %}

                {% if app.flashes('form_submitted') %}
                    <div class="alert alert-danger container-fluid d-flex align-items-center justify-content-center mb-5 p-3"
                         id="error">
                        {% for error in errorArray %}
                            {{ error }}<br>
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('assets/js/form.js') }}" type="text/javascript"></script>
    {% endblock %}

{% endblock %}




